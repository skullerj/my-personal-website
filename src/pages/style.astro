---
import "../styles/global.css";
import Button from "../components/Button.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio Style Guide</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"
    ></script>
    <style>
      body {
        font-family: var(--font-serif);
        background: linear-gradient(
          135deg,
          var(--color-cream) 0%,
          #fae8c6 100%
        );
        color: var(--color-navy);
        line-height: 1.6;
        overflow-x: hidden;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
      }

      header {
        text-align: center;
        margin-bottom: 4rem;
        padding: 2rem 0;
      }

      .main-title {
        letter-spacing: -0.02em;
        margin-bottom: 1rem;
        color: var(--color-navy);
      }

      .subtitle {
        font-size: 1.5rem;
        color: var(--color-blue);
        font-style: italic;
        opacity: 0.9;
      }

      .section {
        background: rgba(255, 255, 255, 0.4);
        border-radius: 20px;
        padding: 2.5rem;
        margin-bottom: 3rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 32px rgba(0, 48, 73, 0.1);
      }

      .section-title {
        color: var(--color-navy);
        margin-bottom: 2rem;
        position: relative;
        display: inline-block;
      }

      .section-title::after {
        content: "";
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 0;
        height: 3px;
        background: var(--color-blue);
        transition: width 0.6s ease;
      }

      .section-title.animated::after {
        width: 100%;
      }

      /* Color Palette */
      .color-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
      }

      .color-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0, 48, 73, 0.1);
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }

      .color-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 48, 73, 0.15);
      }

      .color-swatch {
        width: 100%;
        height: 120px;
        border-radius: 12px;
        margin-bottom: 1rem;
        position: relative;
        overflow: hidden;
      }

      .cream-swatch {
        background: var(--color-cream);
      }
      .navy-swatch {
        background: var(--color-navy);
      }
      .blue-swatch {
        background: var(--color-blue);
      }

      .color-info h3 {
        font-size: 1.4rem;
        margin-bottom: 0.5rem;
        color: var(--color-navy);
      }

      .color-code {
        font-family: "Courier New", monospace;
        background: var(--color-cream);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.9rem;
        color: var(--color-navy);
        margin-bottom: 0.5rem;
      }

      .color-usage {
        font-size: 0.95rem;
        color: var(--color-blue);
        font-style: italic;
      }

      /* Typography */
      .typography-examples {
        display: grid;
        gap: 2rem;
      }

      .type-example {
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.6);
        border-radius: 12px;
        border-left: 4px solid var(--color-blue);
      }

      .type-label {
        font-size: 0.9rem;
        color: var(--color-blue);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
      }

      /* Sample Content */
      .sample-content {
        background: white;
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 48, 73, 0.1);
      }

      .sample-content h2 {
        color: var(--color-navy);
        margin-bottom: 1.5rem;
      }

      .sample-content p {
        margin-bottom: 1.5rem;
        line-height: 1.7;
      }

      .highlight {
        background: linear-gradient(
          120deg,
          var(--color-cream) 0%,
          var(--color-cream) 100%
        );
        background-repeat: no-repeat;
        background-size: 100% 0.3em;
        background-position: 0 88%;
        transition: background-size 0.25s ease-in;
      }

      .highlight:hover {
        background-size: 100% 88%;
      }

      .button-showcase {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-top: 2rem;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .container {
          padding: 1rem;
        }

        .button-showcase {
          flex-direction: column;
          align-items: center;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header class="fade-in">
        <h1 class="main-title">Style Guide</h1>
        <p class="subtitle">
          Friendly Professional • Times New Roman • Warm Palette
        </p>
      </header>

      <section class="section slide-in-left">
        <h2 class="section-title">Color Palette</h2>
        <div class="color-grid">
          <div class="color-card scale-in">
            <div class="color-swatch cream-swatch"></div>
            <div class="color-info">
              <h3>Warm Cream</h3>
              <div class="color-code">#FDF0D5</div>
              <p class="color-usage">Backgrounds, highlights, warmth</p>
            </div>
          </div>
          <div class="color-card scale-in">
            <div class="color-swatch navy-swatch"></div>
            <div class="color-info">
              <h3>Deep Navy</h3>
              <div class="color-code">#003049</div>
              <p class="color-usage">Primary text, headings, professional</p>
            </div>
          </div>
          <div class="color-card scale-in">
            <div class="color-swatch blue-swatch"></div>
            <div class="color-info">
              <h3>Friendly Blue</h3>
              <div class="color-code">#669BBC</div>
              <p class="color-usage">Accents, links, approachable elements</p>
            </div>
          </div>
        </div>
      </section>

      <section class="section slide-in-right">
        <h2 class="section-title">Typography</h2>
        <div class="typography-examples">
          <div class="type-example">
            <div class="type-label">H1 - Main Headlines</div>
            <h1>Welcome to My Portfolio</h1>
          </div>
          <div class="type-example">
            <div class="type-label">H2 - Section Headers</div>
            <h2>About My Work</h2>
          </div>
          <div class="type-example">
            <div class="type-label">H3 - Subsections</div>
            <h3>Project Details</h3>
          </div>
          <div class="type-example">
            <div class="type-label">H4 - Minor Headers</div>
            <h4>Skills & Expertise</h4>
          </div>
          <div class="type-example">
            <div class="type-label">Body Text</div>
            <div>
              This is how your main content will look. Times New Roman brings a
              classic, professional feel while remaining highly readable and
              approachable for your visitors.
            </div>
          </div>
          <div class="type-example">
            <div class="type-label">Caption Text</div>
            <caption>
              Image captions, small notes, and secondary information
            </caption>
          </div>
        </div>
      </section>

      <section class="section slide-in-left">
        <h2 class="section-title">Interactive Elements</h2>
        <div class="button-showcase">
          <Button variant="primary">Primary Action</Button>
          <Button variant="secondary">Secondary</Button>
          <Button variant="accent">Accent Button</Button>
        </div>
      </section>

      <section class="section slide-in-right">
        <h2 class="section-title">Content Preview</h2>
        <div class="sample-content">
          <h2>
            Hello, I'm a <span class="highlight">Creative Professional</span>
          </h2>
          <p>
            This is how your portfolio content will look with this style guide.
            The combination of Times New Roman with your warm color palette
            creates a perfect balance of professionalism and approachability.
          </p>
          <p>
            The deep navy provides strong contrast for readability, while the
            cream background feels welcoming and the blue accents add just the
            right amount of personality without being overwhelming.
          </p>
          <Button variant="primary">View My Work</Button>
        </div>
      </section>
    </div>

    <script>
      // GSAP Animations
      gsap.registerPlugin();

      // Initial page load animations
      gsap.to(".fade-in", {
        opacity: 1,
        y: 0,
        duration: 1,
        ease: "power2.out",
      });

      gsap.to(".slide-in-left", {
        opacity: 1,
        x: 0,
        duration: 0.8,
        delay: 0.2,
        ease: "power2.out",
      });

      gsap.to(".slide-in-right", {
        opacity: 1,
        x: 0,
        duration: 0.8,
        delay: 0.4,
        ease: "power2.out",
      });

      gsap.to(".scale-in", {
        opacity: 1,
        scale: 1,
        duration: 0.6,
        delay: 0.6,
        stagger: 0.2,
        ease: "back.out(1.7)",
      });

      // Section title underline animation on scroll
      const sectionTitles = document.querySelectorAll(".section-title");

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("animated");
            }
          });
        },
        { threshold: 0.5 },
      );

      sectionTitles.forEach((title) => {
        observer.observe(title);
      });

      // Color card interactions
      document.querySelectorAll(".color-card").forEach((card) => {
        card.addEventListener("mouseenter", () => {
          gsap.to(card, {
            y: -10,
            duration: 0.3,
            ease: "power2.out",
          });
        });

        card.addEventListener("mouseleave", () => {
          gsap.to(card, {
            y: 0,
            duration: 0.3,
            ease: "power2.out",
          });
        });
      });

      // Subtle floating animation for the main title
      gsap.to(".main-title", {
        y: -10,
        duration: 2,
        ease: "power1.inOut",
        yoyo: true,
        repeat: -1,
      });

      // Highlight animation
      document.querySelectorAll(".highlight").forEach((element) => {
        element.addEventListener("mouseenter", () => {
          gsap.to(element, {
            backgroundSize: "100% 88%",
            duration: 0.3,
            ease: "power2.out",
          });
        });
      });
    </script>
  </body>
</html>
